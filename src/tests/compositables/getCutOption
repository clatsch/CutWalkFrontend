import { mount, h } from 'vitest';
import getCutOption from '@/composables/getCutOption';

it('loads cut option successfully', async () => {
  const wrapper = mount(() => {
    const { cutOption, error, load } = getCutOption(123);
    load();
    return () => h('div', {}, cutOption.value);
  });

  await wrapper.nextTick();

  expect(wrapper.text()).toBe('Option A');
});
